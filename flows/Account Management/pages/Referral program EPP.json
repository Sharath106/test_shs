    "conditionalCases": [ {
      "cases": [ {
        "condition": "$session.params.repeat_counter = null OR $session.params.repeat_counter = 3",
        "caseContent": [ {
          "message": {
            "text": {
              "text": [ "Les clients de TELUS P E P peuvent recommander des collègues dans le cadre du programme Recommander un collègue. L'activation de la recommandation récompense à la fois le référant et le référé avec des crédits de facture." ]
            },
            "languageCode": "fr-ca"
          }
        }, {
          "message": {
            "text": {
              "text": [ "Commencez par contacter un revendeur TELUS ou visitez le site telus.com, slash, P E P . Les personnes recommandées reçoivent un courriel avec le code d'activation." ]
            },
            "languageCode": "fr-ca"
          }
        }, {
          "message": {
            "text": {
              "text": [ "TELUS E P P customers can refer colleagues through the Refer a Coworker program. Referral activation rewards both parties with bill credits during future billing cycles." ]
            },
            "languageCode": "en"
          }
        }, {
          "message": {
            "text": {
              "text": [ "Start by contacting a TELUS dealer or visiting telus.com, slash, E P P . Refer-ees will receive an email with a personalized activation code." ]
            },
            "languageCode": "en"
          }
        } ]
      }, {
        "condition": "$session.params.repeat_counter = 1 OR $session.params.repeat_counter = 4",
        "caseContent": [ {
          "message": {
            "text": {
              "text": [ "Les clients de TELUS peuvent utiliser le programme P E P pour étendre les offres à leurs collègues." ]
            },
            "languageCode": "fr-ca"
          }
        }, {
          "message": {
            "text": {
              "text": [ "Dès l'activation de la recommandation, les deux parties reçoivent des crédits de facturation dans un ou deux cycles de facturation." ]
            },
            "languageCode": "fr-ca"
          }
        }, {
          "message": {
            "text": {
              "text": [ "Les références peuvent être initiées en contactant un revendeur TELUS ou en visitant le site telus.com, slash, P E P . Les personnes recommandées vont recevoir un courriel avec le code d'activation." ]
            },
            "languageCode": "fr-ca"
          }
        }, {
          "message": {
            "text": {
              "text": [ "TELUS customers can utilize the E P P Refer a Coworker program to extend deals to colleagues." ]
            },
            "languageCode": "en"
          }
        }, {
          "message": {
            "text": {
              "text": [ "Upon referral activation, both parties receive bill credits in 1-2 billing cycles." ]
            },
            "languageCode": "en"
          }
        }, {
          "message": {
            "text": {
              "text": [ "Initiate referrals by contacting a TELUS dealer or visiting telus.com, slash, E P P . Refer-ees will receive an email with a personalized activation code." ]
            },
            "languageCode": "en"
          }
        } ]
      }, {
        "condition": "$session.params.repeat_counter = 2 OR $session.params.repeat_counter = 5",
        "caseContent": [ {
          "message": {
            "text": {
              "text": [ "Les clients de TELUS peuvent utiliser le programme P E P pour étendre l'offre à leurs collègues." ]
            },
            "languageCode": "fr-ca"
          }
        }, {
          "message": {
            "text": {
              "text": [ "Dès l'activation de la recommandation, le référant et le référé reçoivent tous deux des crédits de facturation dans un délai de 1 à 2 cycles de facturation." ]
            },
            "languageCode": "fr-ca"
          }
        }, {
          "message": {
            "text": {
              "text": [ "Il suffit de communiquer avec un détaillant TELUS ou de visiter le site telus.com, slash, P E P , pour que les personnes recommandées reçoivent un courriel d'activation unique. Les personnes recommandées reçoivent un courriel contenant un code d'activation unique." ]
            },
            "languageCode": "fr-ca"
          }
        }, {
          "message": {
            "text": {
              "text": [ "TELUS customers can utilize the E P P Refer a Coworker program to extend the E P P deal to colleagues." ]
            },
            "languageCode": "en"
          }
        }, {
          "message": {
            "text": {
              "text": [ "Upon referral activation, both parties will receive bill credits within 1-2 billing cycles." ]
            },
            "languageCode": "en"
          }
        }, {
          "message": {
            "text": {
              "text": [ "Initiate referrals by contacting a TELUS dealer or visiting telus.com, slash, E P P . Refer-ees will receive an email with a personalized activation code." ]
            },
            "languageCode": "en"
          }
        } ]
