{
  "name": "12a343ce-20d2-4e38-9549-f15a1096e30e",
  "displayName": "Send SMS",
  "form": {
  
  },
  "entryFulfillment": {
    "webhook": "sms_services",
    "tag": "send_sms",
    "setParameterActions": [ {
      "parameter": "error_api_name",
      "value": null
    }, {
      "parameter": "error_full_response",
      "value": null
    }, {
      "parameter": "api_delay",
      "value": null
    }, {
      "parameter": "error_retry",
      "value": null
    }, {
      "parameter": "error_code",
      "value": null
    } ]
  },
  "transitionRoutes": [ {
    "condition": "$session.params.responseMessage = \"Success\"",
    "triggerFulfillment": {
      "messages": [ {
        "text": {
          "text": [ "Merci, votre message a été envoyé." ]
        },
        "languageCode": "fr-ca"
      } ],
      "setParameterActions": [ {
        "parameter": "return",
        "value": "Y"
      }, {
        "parameter": "async_sms_flow_status",
        "value": "success"
      }, {
        "parameter": "async_sms_sent_list",
        "value": "$sys.func.APPEND($session.params.async_sms_sent_list, $session.params.last_page)"
      }, {
        "parameter": "sms_sent_check",
        "value": true
      }, {
        "parameter": "shortCode",
        "value": "5420"
      } ],
      "conditionalCases": [ {
        "cases": [ {
          "condition": "$session.params.async_low_ss_prop = true",
          "caseContent": [ {
            "message": {
              "text": {
                "text": [ "Ok. Follow the link in the text I sent you to connect to a TELUS Expert." ]
              },
              "languageCode": "en"
            }
          } ]
        }, {
          "caseContent": [ {
            "message": {
              "text": {
                "text": [ "I’ve just sent you a text to connect you to a TELUS Expert." ]
              },
              "languageCode": "en"
            }
          } ]
        } ]
      } ]
    },
    "targetPage": "End page",
    "name": "d951d2ea-64c8-4d6a-9989-297349f58207"
  }, {
    "condition": "$session.params.responseMessage != \"Success\"",
    "triggerFulfillment": {
      "messages": [ {
        "text": {
          "text": [ "Sorry, I am having issues with sending the text. But you can still connect with a team member through TELUS Expert Messaging on the My TELUS app." ]
        },
        "languageCode": "en"
      }, {
        "text": {
          "text": [ "Nous avons quelques difficultés a vous envoyer votre SMS." ]
        },
        "languageCode": "fr-ca"
      } ],
      "setParameterActions": [ {
        "parameter": "sms_flow_status",
        "value": "$page.params.errorcode"
      } ]
    },
    "targetPage": "Return To Start",
    "name": "effd2bc4-c3ff-4e3d-a767-d8b3e01734e5"
  } ],
  "eventHandlers": [ {
    "targetPage": "Route -\u003e Universal Handoff",
    "event": "webhook.error.timeout",
    "triggerFulfillment": {
      "messages": [ {
        "text": {
          "text": [ "I am having issues with sending the text." ]
        },
        "languageCode": "en"
      } ],
      "setParameterActions": [ {
        "parameter": "sendsms_apitimeout",
        "value": "true"
      }, {
        "parameter": "smsmod_webhook_error",
        "value": "true"
      }, {
        "parameter": "async_agent_count",
        "value": "3"
      } ]
    },
    "name": "93ce92d6-f746-439a-918a-b18de9f7fefb"
  } ]
}
